<Window x:Class="Aplikacja_Kliencka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aplikacja_Kliencka"
        mc:Ignorable="d"
        Title="Zarzadzanie rozproszonymi obliczeniami-Klient" Height="450" Width="800"
        MinHeight="500" MinWidth="800">
    <Grid>
        <Grid x:Name="grid_menu" Height="50" MinHeight="50" VerticalAlignment="Bottom" Background="#FF0CFF00">
            <Button x:Name="btn_home" Content="Home" HorizontalAlignment="Left" Margin="0,0,0,0" Width="125" BorderBrush="Red" Background="Red" Click="btn_home_Click"/>
            <Button x:Name="btn_config" Content="Config" HorizontalAlignment="Right" Margin="0,0,0,0" Width="125" BorderBrush="#FFFFA200" Background="#FFFFA200" Click="btn_config_Click"/>
        </Grid>
        <Grid x:Name="grid_board" Background="#FF1F08FF" Margin="0,0,0,50" MinHeight="400"/>
    </Grid>
</Window>
