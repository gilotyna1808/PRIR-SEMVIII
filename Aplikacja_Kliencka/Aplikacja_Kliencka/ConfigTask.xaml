<UserControl x:Class="Aplikacja_Kliencka.ConfigTaskBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aplikacja_Kliencka"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FF00DCFF">
        <Label Content="Ilość obsługiwanych zadań:" HorizontalAlignment="Left" Height="60" Margin="5,5,0,0" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="300" FontSize="20"/>
        <TextBox x:Name="txt_taskCount" Margin="310,5,5,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="60" VerticalContentAlignment="Center" TextAlignment="Left" FontSize="20" TextChanged="txt_taskCount_TextChanged"/>
        <ScrollViewer x:Name="scr_kolejka" VerticalScrollBarVisibility="Auto" Margin="0,70,0,0">
            <Grid x:Name="grid_taskNamesBoard" Margin="0,0,0,0"/>
        </ScrollViewer>
    </Grid>
</UserControl>
