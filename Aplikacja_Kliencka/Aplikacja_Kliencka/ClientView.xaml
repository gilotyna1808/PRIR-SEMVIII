<UserControl x:Class="Aplikacja_Kliencka.ClientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aplikacja_Kliencka"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800" MinHeight="100" MaxHeight="100" VerticalAlignment="Top" BorderBrush="Red" BorderThickness="0,0,0,2">
    <Grid Background="#FFDCFF00">
        <Button x:Name="btn_start" Content="START" HorizontalAlignment="Left" Margin="5,5,0,5" Width="125" Click="btn_start_Click"/>
        <Button x:Name="btn_log" Content="LOG" HorizontalAlignment="Left" Margin="150,5,0,5" Width="125" Click="btn_log_Click"/>
        <Button x:Name="btn_stop" Content="STOP" HorizontalAlignment="Right" Margin="0,5,5,5" Width="125" Click="btn_stop_Click"/>
        <Label x:Name="lbl_clientName" Content="" HorizontalAlignment="Left" Height="45" Margin="280,5,0,0" VerticalAlignment="Top" Width="385"/>
        <Label x:Name="lbl_status" Content="" HorizontalAlignment="Left" Height="45" Margin="280,50,0,0" VerticalAlignment="Top" Width="385"/>

    </Grid>
</UserControl>
