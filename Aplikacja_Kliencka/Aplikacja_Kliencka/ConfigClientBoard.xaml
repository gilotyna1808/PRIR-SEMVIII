<UserControl x:Class="Aplikacja_Kliencka.ConfigClientBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aplikacja_Kliencka"
             mc:Ignorable="d" 
             d:DesignHeight="375" d:DesignWidth="800">
    <Grid>
        <Label Content="Maksymalna ilość klientów:" HorizontalAlignment="Left" Height="60" Margin="5,5,0,0" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="300" FontSize="20" Foreground="White"/>
        <TextBox x:Name="txt_clientCount" Margin="310,5,5,2" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="60" VerticalContentAlignment="Center" TextAlignment="Left" FontSize="20" TextChanged="txt_queueCount_TextChanged"/>
        <Label Content="Nazwy używanych klientów:" HorizontalAlignment="Left" Height="60" Margin="5,70,0,0" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="300" FontSize="20" Foreground="White"/>
        <ScrollViewer x:Name="scr_client" VerticalScrollBarVisibility="auto" Margin="0,135,0,5">
            <Grid x:Name="grid_clientNamesBoard" Margin="0,0,0,0"/>
        </ScrollViewer>
    </Grid>
</UserControl>
